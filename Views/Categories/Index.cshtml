@model List<Category>;

@section title {
    <h3>
        Categories
    </h3>
}

<br />

@if (Model != null && Model.Count() > 0)
{
    <table class="table table-stripped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var category in Model)
            {
                <tr>
                    <td>@category.Name</td>
                    <td>@category.Description</td>
                    @* <td><a class="btn btn-link" href="@($"/categories/edit/{category.CategoryId}")">Edit</a></td> *@
                    @*Using Tag helper to generate links to *@
                    <td>
                        <a class="btn btn-link" asp-controller="categories" asp-action="edit"
                            asp-route-id="@category.CategoryId">Edit
                        </a>
                    </td>
                    <td>
                        <a class="btn btn-link" asp-controller="categories" asp-action="delete"
                            asp-route-id="@category.CategoryId" onclick="return confirmDelete()">Delete
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
<div>
    <a class="btn btn-primary" asp-controller="categories" asp-action="add">Add
    </a>
</div>
@section Scripts {
    <script>
        function confirmDelete() {
            return confirm("Are you sure you want delete")
        }
    </script>
}
